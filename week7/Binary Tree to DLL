class Solution {
  public:
  Node* head=NULL;
  Node* prev=NULL;
    Node* bToDLL(Node* root) {
        // code here
        if(root == NULL){
            return NULL;
        }
        bToDLL(root->left);
        if(prev == NULL){
            head=root;
        }
        else{
            root->left=prev;
            prev->right=root;
        }
        prev=root;
        bToDLL(root->right);
        return head;
    }
};
