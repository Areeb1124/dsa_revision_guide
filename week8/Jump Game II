class Solution {
public:
    int jump(vector<int>& nums) {
        //Using greedy
        int n=nums.size();
        int l=0,r=0,jumps=0;
        while(r<n-1){
           int farthest=0;
           for(int idx=l;idx<=r;idx++){
            farthest=max(farthest,idx+nums[idx]);
           }
           l=r+1;
           r=farthest;
           jumps++;
        }
        return jumps;
        
    }
};
