class Solution {
public:
    TreeNode* prev=NULL;
     int minDifference=INT_MAX; 
    int getMinimumDifference(TreeNode* root) {
        if(root == NULL){
            return minDifference;
        }
        getMinimumDifference(root->left);
        //process root
        if(prev!=NULL){
            minDifference=min(minDifference,root->val-prev->val);
        }
        if(root!=NULL){
            prev=root;
        }
        getMinimumDifference(root->right);
        return minDifference;
    }
};
